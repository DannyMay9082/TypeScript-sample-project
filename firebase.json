{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/en/index.html"
      },
      {
        "source": "**/en/**",
        "destination": "/en/index.html"
      },
      {
        "source": "**/es/**",
        "destination": "/es/index.html"
      },
      {
        "source": "**",
        "function": "ssr"
      }
    ]
  }
}
