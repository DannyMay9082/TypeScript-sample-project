{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**/*.@(css|js)",
        "destination": "/index2.html"
      },
      {
        "source": "**/es/**",
        "destination": "/es/index.html"
      },
      {
        "source": "**",
        "function": "ssr"
      }
    ]
  }
}
